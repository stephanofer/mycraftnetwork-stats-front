---
import PlayerSearch from "./PlayerSearch.astro";
---

<header class="site-header">
  <div class="container">
    <nav aria-label="Main navigation">
      <div class="logo">
        <a href="/" class="logo-link" aria-label="Home page">
          <img
            src="/images/favicon.webp"
            alt="Mycraft Network Logo"
            loading="eager"
            fetchpriority="high"
            decoding="async"
            width="44"
            height="44"
          />
          <div class="logo-text">
            <span class="logo-title">Mycraft Network</span>
            <span class="logo-subtitle">IP: server.mycraft.es</span>
          </div>
        </a>
      </div>

      <div class="nav-search">
        <PlayerSearch />
      </div>

      <div class="nav-actions">
        <ul class="nav-links">
          <li>
            <a
              href="/"
              class="nav-link"
              aria-current={Astro.url.pathname === "/" ? "page" : undefined}
              >Inicio</a
            >
          </li>
          <li>
            <a
              href="https://tienda.mycraft.es"
              class="nav-link"
              target="_self"
              rel="noopener noreferrer">Tienda</a
            >
          </li>
          <li>
            <a
              href="https://discord.mycraft.es"
              class="nav-link discord-link"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Discord"
            >
              <svg class="discord-icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"/>
              </svg>
              <span class="discord-text">Discord</span>
            </a>
          </li>
        </ul>
      </div>
    </nav>
  </div>
</header>

<style>
  .container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .site-header {
    padding: 0.75rem 1rem;
    position: sticky;
    top: 0;
    z-index: 1000;
    background: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);

    @media (width > 768px) {
      padding: 0.85rem 1.5rem;
    }
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;

    @media (width > 640px) {
      gap: 1rem;
    }
  }

  /* Logo */
  .logo {
    flex-shrink: 0;
  }

  .logo-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
  }

  .logo-link img {
    width: 40px;
    height: 40px;
    border-radius: 8px;

    @media (width > 640px) {
      width: 44px;
      height: 44px;
    }
  }

  .logo-text {
    display: none;
    flex-direction: column;
    gap: 0.1rem;

    @media (width > 1100px) {
      display: flex;
    }
  }

  .logo-title {
    font-weight: 700;
    font-size: 0.95rem;
    color: white;
    line-height: 1.2;
  }

  .logo-subtitle {
    font-size: 0.7rem;
    font-family: "Clash", sans-serif;
    color: var(--color-opacity);
    font-weight: 500;
  }

  /* Search */
  .nav-search {
    flex: 1;
    display: flex;
    justify-content: center;
    max-width: 380px;
    min-width: 0;

    @media (width > 768px) {
      max-width: 420px;
    }
  }

  /* Navigation Actions */
  .nav-actions {
    flex-shrink: 0;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0;
    padding: 0;
    list-style: none;

    @media (width > 640px) {
      gap: 1.25rem;
    }
  }

  .nav-links li {
    display: flex;
  }

  /* Hide text links on mobile, show only Discord */
  .nav-links li:not(:last-child) {
    display: none;

    @media (width > 768px) {
      display: flex;
    }
  }

  .nav-link {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.75);
    font-weight: 500;
    padding: 0.4rem 0;
    position: relative;
    transition: color 0.2s ease;

    &:hover {
      color: white;
    }

    &::after {
      content: "";
      position: absolute;
      left: 0;
      bottom: 0;
      width: 0;
      height: 1px;
      background: white;
      transition: width 0.2s ease;
    }

    &:hover::after {
      width: 100%;
    }

    &[aria-current="page"] {
      color: white;
    }

    &[aria-current="page"]::after {
      width: 100%;
      background: var(--resalt);
    }
  }

  /* Discord Link - always visible */
  .discord-link {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.45rem 0.75rem;
    background: rgba(88, 101, 242, 0.15);
    border: 1px solid rgba(88, 101, 242, 0.25);
    border-radius: 8px;
    color: #7289da;
    transition: all 0.2s ease;

    &::after {
      display: none;
    }

    &:hover {
      background: rgba(88, 101, 242, 0.25);
      color: #8ea1ff;
      transform: translateY(-1px);
    }
  }

  .discord-icon {
    flex-shrink: 0;
  }

  .discord-text {
    display: none;
    font-size: 0.8rem;
    font-weight: 600;

    @media (width > 480px) {
      display: block;
    }
  }

  img {
    width: 100%;
    height: auto;
  }
</style>
