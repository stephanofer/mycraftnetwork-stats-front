    color: #9ca3af;
  }
  .stat-value.kd {
    color: #60a5fa;
  }
  .stat-value.streak {
    color: #fb923c;
  }
  .stat-value.maxstreak {
    color: #fbbf24;
  }
  .stat-value.elo {
    color: #c4b5fd;
  }
  .stat-value.combatlogs {
    color: #f87171;
  }
  .stat-value.wins {
    color: #22c55e;
  }
  .stat-value.losses {
    color: #ef4444;
  }

  .rank-indicator {
    font-family: "Seven", monospace;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.35);
    min-width: 2rem;
  }

  .stat-row[data-rank="1"] .rank-indicator {
    color: #fbbf24;
  }
  .stat-row[data-rank="2"] .rank-indicator {
    color: #9ca3af;
  }
  .stat-row[data-rank="3"] .rank-indicator {
    color: #cd7f32;
  }

  .stat-row[data-rank="1"] .stat-value {
    color: #fbbf24;
  }
  .stat-row[data-rank="2"] .stat-value {
    color: #9ca3af;
  }
  .stat-row[data-rank="3"] .stat-value {
    color: #cd7f32;
  }

  .sections-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .sections-row {
      grid-template-columns: 1fr 1fr;
    }
  }

  .section {
    display: flex;
    flex-direction: column;
  }

  .section-header {
    margin-bottom: 1rem;
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    color: var(--resalt);
  }

  .section-title h2 {
    font-family: "Clash", sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: #fff;
    margin: 0;
  }

  @media (min-width: 768px) {
    .section-title h2 {
      font-size: 1.35rem;
    }
  }

  .total-highlight {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.25rem;
    border-radius: 0.75rem;
    margin-bottom: 1rem;
  }

  .total-label {
    font-size: 1rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.85);
  }

  .total-value {
    font-family: "Seven", monospace;
    font-size: 1.75rem;
    font-weight: 700;
  }

  @media (min-width: 768px) {
    .total-value {
      font-size: 2rem;
    }
  }

  .koth-total {
    background: rgba(251, 191, 36, 0.1);
    border: 1px solid rgba(251, 191, 36, 0.2);
  }

  .koth-total .total-value {
    color: #fbbf24;
  }

  .duels-total {
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.2);
  }

  .duels-total .total-value {
    color: #60a5fa;
  }

  .section-list .stat-row {
    padding: 0.75rem 0;
  }

  .section-list .stat-label {
    font-size: 0.95rem;
  }

  .section-list .stat-value {
    font-size: 1.1rem;
  }

  @media (min-width: 768px) {
    .section-list .stat-label {
      font-size: 1rem;
    }
    .section-list .stat-value {
      font-size: 1.2rem;
    }
  }

  .rankings-section {
    margin-top: 1.25rem;
    padding-top: 1.25rem;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
  }

  .sub-header {
    font-size: 0.75rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.5);
    text-transform: uppercase;
    letter-spacing: 0.06em;
    margin: 0 0 0.5rem 0;
  }

  .last-played {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.45);
    margin: 1rem 0 0 0;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
  }

  .empty {
    color: rgba(255, 255, 255, 0.35);
    font-size: 1rem;
    text-align: center;
    padding: 2.5rem 1rem;
    margin: 0;
  }

  @media (prefers-reduced-motion: reduce) {
    .animate-slide-left,
    .animate-slide-right {
      animation: fadeIn 0.4s ease forwards;
    }
    .bg-glow {
      animation: none;
    }
  }
</style>
