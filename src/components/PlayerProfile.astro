  }

  .stat-row:last-child {
    border-bottom: none;
  }

  .stat-row:hover {
    background: rgba(255, 255, 255, 0.02);
    margin: 0 -0.5rem;
    padding-left: 0.5rem;
    padding-right: 0.5rem;
    border-radius: 0.5rem;
  }

  .stat-label {
    font-size: 1rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.7);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  @media (min-width: 768px) {
    .stat-label {
      font-size: 1.1rem;
    }
  }

  .stat-value {
    font-family: "Seven", monospace;
    font-size: 1.25rem;
    font-weight: 700;
    color: #fff;
  }

  @media (min-width: 768px) {
    .stat-value {
      font-size: 1.4rem;
    }
  }

